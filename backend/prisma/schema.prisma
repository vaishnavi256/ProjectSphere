generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model batch {
  id       Int      @id @default(autoincrement())
  name     String
  semester Int
  guideId  Int?

  guide    guide?   @relation(fields: [guideId], references: [id])
  students student[]

  @@index([guideId], map: "Batch_guideId_fkey")
}

model guide {
  id       Int      @id @default(autoincrement())
  name     String
  role     String
  email    String   @unique(map: "Guide_email_key")
  semester Int

  teams    team[]
  batches  batch[]
}

model project {
  id               Int    @id @default(autoincrement())
  teamId           Int?
  topic            String    
  synopsis         Bytes
  synopsisApproval Int    @default(0)
  githubLink       String

  team             team?  @relation(fields: [teamId], references: [id])
  @@index([teamId], map: "Project_teamId_fkey")
}

model Idea {
  id       Int    @id @default(autoincrement())
  teamId   Int
  topic    String
  comment Json
  approved Int // 0 -> pending, 1 -> approved, 2 -> rejected
  team     team  @relation(fields: [teamId], references: [id])
}

model report {
  id        Int      @id @default(autoincrement())
  teamId    Int?
  file      Bytes
  createdAt DateTime @default(now())

  team      team?    @relation(fields: [teamId], references: [id])

  @@index([teamId], map: "Report_teamId_fkey")
}

model student {
  id       Int     @id @default(autoincrement())
  email    String  @unique(map: "Student_email_key")
  password String
  name     String
  prn      String  @unique(map: "Student_prn_key")
  teamId   Int?
  semester Int     @default(0)
  batchId  Int?

  team     team?   @relation(fields: [teamId], references: [id])
  batch    batch?  @relation(fields: [batchId], references: [id])

  @@index([teamId], map: "Student_teamId_fkey")
  @@index([batchId], map: "Team_batchId_fkey")
}

model team {
  id       Int    @default(autoincrement())
  semester Int
  name     String
  guideId  Int?

  guide    guide?    @relation(fields: [guideId], references: [id])
  students student[]
  projects project[]
  reports  report[]
  ideas    Idea[]

  @@id([id, semester])
  @@unique([id], map: "Team_id_unique")
  @@index([guideId], map: "Team_guideId_fkey")
}
